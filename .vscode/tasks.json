{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/bash",
            "args": [
                "-c",
                "/usr/bin/gcc -fdiagnostics-color=always -Wall -g ${file} -o ${fileDirname}/${fileBasenameNoExtension} `pkg-config --cflags --libs gtk+-3.0 vte-2.91`"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
